<!--pages/address/api/api.wxml-->
<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="18" markers="{{markers}}" bindmarkertap="markertap" bindregionchange="regionchange" show-location style="width: 100%; height: 300px;"></map>
<form bindsubmit="formSubmit">
<view>
        <input name="address" value="{{addressName}}" placeholder="请输入地点" placeholder-style="color:#c6c6c6" style="display:inline-block;padding:0 10rpx 0 0" disabled='true'/>
        <image bindtap="selectMap" src="../../../images/search_ico.png" style="width: 20px; height: 20px"/>
</view>
    
    <button formType="submit" type="primary" >确定</button>
</form>
